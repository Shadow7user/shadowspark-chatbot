generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model Business {
  id        String   @id
  name      String
  phone     String?
  email     String?
  userId    String
  createdAt DateTime @default(now()) @db.Timestamp(6)
  updatedAt DateTime @default(now()) @db.Timestamp(6)
  Lead      Lead[]
}

model Lead {
  id         String     @id
  name       String
  phone      String
  email      String?
  status     LeadStatus @default(NEW)
  businessId String
  createdAt  DateTime   @default(now()) @db.Timestamp(6)
  updatedAt  DateTime   @default(now()) @db.Timestamp(6)
  Business   Business   @relation(fields: [businessId], references: [id], onDelete: Cascade, onUpdate: NoAction)
}

model auth_attempts {
  id         Int       @id @default(autoincrement())
  username   String?
  ip         String?
  success    Boolean?
  created_at DateTime? @default(now()) @db.Timestamptz(6)
}

model chat_users {
  id            String          @id
  name          String?
  email         String?
  phone         String?
  metadata      Json?
  createdAt     DateTime        @default(now())
  updatedAt     DateTime
  conversations conversations[]
  user_channels user_channels[]
}

model client_configs {
  id                String   @id
  clientId          String   @unique
  businessName      String
  systemPrompt      String
  welcomeMessage    String?
  fallbackMessage   String?
  maxTokens         Int      @default(500)
  temperature       Float    @default(0.7)
  channels          Json
  metadata          Json?
  active            Boolean  @default(true)
  createdAt         DateTime @default(now())
  updatedAt         DateTime
  lastResetMonth    String?
  monthlyTokenCap   Int?
  monthlyTokenUsage Int      @default(0)
}

model contact_submissions {
  id         Int       @id @default(autoincrement())
  first_name String
  last_name  String
  email      String
  phone      String?
  subject    String
  message    String
  created_at DateTime? @default(now()) @db.Timestamptz(6)
}

model conversations {
  id         String             @id
  userId     String
  channel    ChannelType
  status     ConversationStatus @default(ACTIVE)
  summary    String?
  clientId   String?
  metadata   Json?
  createdAt  DateTime           @default(now())
  updatedAt  DateTime
  chat_users chat_users         @relation(fields: [userId], references: [id], onDelete: Cascade)
  messages   messages[]

  @@index([clientId])
  @@index([userId, channel])
}

model messages {
  id               String        @id
  conversationId   String
  role             MessageRole
  content          String
  channelMessageId String?       @unique
  metadata         Json?
  createdAt        DateTime      @default(now())
  conversations    conversations @relation(fields: [conversationId], references: [id], onDelete: Cascade)

  @@index([conversationId, createdAt])
}

model stats {
  id         Int       @id @default(autoincrement())
  key        String    @unique
  label      String
  value      String
  icon       String?
  sort_order Int?      @default(0)
  active     Boolean?  @default(true)
  updated_at DateTime? @default(now()) @db.Timestamptz(6)
}

model subscribers {
  id         Int       @id @default(autoincrement())
  email      String    @unique
  name       String?
  source     String?   @default("footer")
  created_at DateTime? @default(now()) @db.Timestamptz(6)
  updated_at DateTime? @default(now()) @db.Timestamptz(6)
}

model user_channels {
  id            String      @id
  userId        String
  channelType   ChannelType
  channelUserId String
  createdAt     DateTime    @default(now())
  chat_users    chat_users  @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([channelType, channelUserId])
}

model webhook_logs {
  id        String      @id
  channel   ChannelType
  eventType String
  payload   Json
  processed Boolean     @default(false)
  error     String?
  createdAt DateTime    @default(now())

  @@index([channel, createdAt])
}

enum ChannelType {
  WHATSAPP
  TELEGRAM
  WEB
}

enum ConversationStatus {
  ACTIVE
  PAUSED
  HANDOFF
  CLOSED
}

enum LeadStatus {
  NEW
  CONTACTED
  QUALIFIED
  CONVERTED
  LOST
}

enum MessageRole {
  USER
  ASSISTANT
  SYSTEM
}
