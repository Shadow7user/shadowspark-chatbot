generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model ChatUser {
  id            String         @id @default(cuid())
  name          String?
  email         String?
  phone         String?
  metadata      Json?
  isVip         Boolean        @default(false)
  createdAt     DateTime       @default(now())
  updatedAt     DateTime       @updatedAt
  conversations Conversation[]
  channels      UserChannel[]

  @@map("chat_users")
}

model UserChannel {
  id            String      @id @default(cuid())
  userId        String
  channelType   ChannelType
  channelUserId String
  createdAt     DateTime    @default(now())
  user          ChatUser    @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([channelType, channelUserId])
  @@map("user_channels")
}

model Conversation {
  id        String             @id @default(cuid())
  userId    String
  channel   ChannelType
  status    ConversationStatus @default(ACTIVE)
  summary   String?
  clientId  String?
  metadata  Json?
  createdAt DateTime           @default(now())
  updatedAt DateTime           @updatedAt
  user      ChatUser           @relation(fields: [userId], references: [id], onDelete: Cascade)
  messages  Message[]

  @@index([userId, channel])
  @@index([clientId])
  @@map("conversations")
}

model Message {
  id               String       @id @default(cuid())
  conversationId   String
  role             MessageRole
  content          String
  channelMessageId String?      @unique
  intent           IntentType?
  confidence       Float?
  priority         Int          @default(5)
  metadata         Json?
  createdAt        DateTime     @default(now())
  conversation     Conversation @relation(fields: [conversationId], references: [id], onDelete: Cascade)

  @@index([conversationId, createdAt])
  @@index([intent, createdAt])
  @@index([priority, createdAt])
  @@map("messages")
}

model WebhookLog {
  id        String      @id @default(cuid())
  channel   ChannelType
  eventType String
  payload   Json
  processed Boolean     @default(false)
  error     String?
  createdAt DateTime    @default(now())

  @@index([channel, createdAt])
  @@map("webhook_logs")
}

model ClientConfig {
  id                String   @id @default(cuid())
  clientId          String   @unique
  businessName      String
  systemPrompt      String
  welcomeMessage    String?
  fallbackMessage   String?
  maxTokens         Int      @default(500)
  temperature       Float    @default(0.7)
  monthlyTokenUsage Int      @default(0)
  monthlyTokenCap   Int?
  lastResetMonth    String?
  monthlyCostUsage  Float    @default(0)
  monthlyCostCap    Float?
  dailyCostUsage    Float    @default(0)
  dailyCostCap      Float?
  lastCostResetDate String?
  channels          Json
  metadata          Json?
  active            Boolean  @default(true)
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt

  @@map("client_configs")
}

model Business {
  id        String   @id
  name      String
  phone     String?
  email     String?
  userId    String
  createdAt DateTime @default(now()) @db.Timestamp(6)
  updatedAt DateTime @default(now()) @db.Timestamp(6)
  Lead      Lead[]
}

model Lead {
  id         String     @id
  name       String
  phone      String
  email      String?
  status     LeadStatus @default(NEW)
  businessId String
  createdAt  DateTime   @default(now()) @db.Timestamp(6)
  updatedAt  DateTime   @default(now()) @db.Timestamp(6)
  Business   Business   @relation(fields: [businessId], references: [id], onDelete: Cascade, onUpdate: NoAction)
}

model auth_attempts {
  id         Int       @id @default(autoincrement())
  username   String?
  ip         String?
  success    Boolean?
  created_at DateTime? @default(now()) @db.Timestamptz(6)
}

model contact_submissions {
  id         Int       @id @default(autoincrement())
  first_name String
  last_name  String
  email      String
  phone      String?
  subject    String
  message    String
  created_at DateTime? @default(now()) @db.Timestamptz(6)
}

model stats {
  id         Int       @id @default(autoincrement())
  key        String    @unique
  label      String
  value      String
  icon       String?
  sort_order Int?      @default(0)
  active     Boolean?  @default(true)
  updated_at DateTime? @default(now()) @db.Timestamptz(6)
}

model subscribers {
  id         Int       @id @default(autoincrement())
  email      String    @unique
  name       String?
  source     String?   @default("footer")
  created_at DateTime? @default(now()) @db.Timestamptz(6)
  updated_at DateTime? @default(now()) @db.Timestamptz(6)
}

enum ChannelType {
  WHATSAPP
  TELEGRAM
  WEB
}

enum ConversationStatus {
  ACTIVE
  PAUSED
  HANDOFF
  CLOSED
}

enum MessageRole {
  USER
  ASSISTANT
  SYSTEM
}

model EscalationQueue {
  id             String             @id @default(cuid())
  conversationId String
  priority       Int                @default(5)
  queueType      EscalationQueueType @default(SUPPORT)
  reason         String?
  assignedTo     String?
  status         EscalationStatus   @default(PENDING)
  createdAt      DateTime           @default(now())
  resolvedAt     DateTime?
  updatedAt      DateTime           @updatedAt

  @@index([status, priority, createdAt])
  @@index([assignedTo, status])
  @@map("escalation_queues")
}

model ConversationAnalytics {
  id                String    @id @default(cuid())
  conversationId    String    @unique
  clientId          String
  messageCount      Int       @default(0)
  userMessageCount  Int       @default(0)
  aiMessageCount    Int       @default(0)
  intent            IntentType?
  sentiment         String?
  handoffReason     String?
  avgResponseTimeMs Int?
  totalCostUsed     Float     @default(0)
  totalTokensUsed   Int       @default(0)
  firstMessageAt    DateTime?
  lastMessageAt     DateTime?
  createdAt         DateTime  @default(now())
  updatedAt         DateTime  @updatedAt

  @@index([clientId, createdAt])
  @@index([intent, createdAt])
  @@map("conversation_analytics")
}

enum IntentType {
  SUPPORT
  SALES
  COMPLAINT
  FAQ
  ESCALATION
  GENERAL
  FEEDBACK
}

enum EscalationQueueType {
  SUPPORT
  SALES
  COMPLAINT
  TECHNICAL
  GENERAL
}

enum EscalationStatus {
  PENDING
  ASSIGNED
  IN_PROGRESS
  RESOLVED
  CANCELLED
}

enum LeadStatus {
  NEW
  CONTACTED
  QUALIFIED
  CONVERTED
  LOST
}
